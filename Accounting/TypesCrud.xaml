<Page x:Class="Accounting.TypesCrud"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Accounting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TypesCrud">

    <Grid Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="TypesGrid" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="3"/>
        <TextBox x:Name="NewTpBox" Grid.Row="3" Grid.Column="2" Height="50" Width="150"
                 FontSize="25"/>
        <Button x:Name="AddTypeBtn" Content="Insert" FontSize="30" Grid.Column="2" 
                Grid.Row="4" Height="50" Width="150" Click="AddTypeBtn_Click"/>
        <Button x:Name="BackBtn" Content="Exit" FontSize="30" Height="50" Width="110" Click="BackBtn_Click"/>
    </Grid>
</Page>
